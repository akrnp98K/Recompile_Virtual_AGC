  STATISTICS:
  PROCEDURE(DATA) ASSIGN(LO_VAL, HI_VAL, MEAN);
     DECLARE DATA ARRAY(100) SCALAR;
     DECLARE SCALAR,
     		LO_VAL, HI_VAL, MEAN;
     LO_VAL = MIN([DATA]);
     HI_VAL = MAX([DATA]);
     MEAN = SUM([DATA]) / 100;
  CLOSE STATISTICS;
  